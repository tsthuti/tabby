{
  "manifest_version": 3,
  "name": "tabby",
  "version": "1.0.0",
  "description": "tabby saves and restores your tab groups with ease.",
  "permissions": ["tabs", "storage"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/tabby32.png",
      "48": "icons/tabby48.png",
      "128": "icons/tabby128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/tabby32.png",
    "48": "icons/tabby48.png",
    "128": "icons/tabby128.png"
  }
}
